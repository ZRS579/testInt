<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">



    <TextView
        android:id="@+id/textName"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="38dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="38dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="15dp"
        android:gravity="bottom"
        android:text="Name: "
        app:layout_constraintBottom_toTopOf="@+id/textPhone"
        app:layout_constraintEnd_toStartOf="@+id/etPhone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textEmail" />

    <TextView
        android:id="@+id/textEmail"
        android:layout_width="43dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/textName"
        android:layout_below="@+id/textName"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="41dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="41dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="6dp"
        android:gravity="bottom"
        android:text="Email: "
        app:layout_constraintBottom_toTopOf="@+id/textName"
        app:layout_constraintEnd_toStartOf="@+id/etEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_below="@+id/textName"
        android:layout_marginLeft="41dp"
        android:layout_marginStart="41dp"
        android:layout_toRightOf="@+id/textEmail"
        android:gravity="bottom"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/textEmail"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textPhone"
        android:layout_width="69dp"
        android:layout_height="40dp"
        android:layout_alignEnd="@+id/textEmail"
        android:layout_below="@+id/textEmail"
        android:layout_marginEnd="27dp"
        android:layout_marginLeft="33dp"
        android:layout_marginRight="27dp"
        android:layout_marginStart="33dp"
        android:layout_marginTop="11dp"
        android:gravity="bottom"
        android:text="Phone #:"
        app:layout_constraintEnd_toStartOf="@+id/etPhone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textName" />

    <EditText
        android:id="@+id/etPhone"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@+id/textEmail"
        android:layout_marginEnd="69dp"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="69dp"
        android:layout_marginStart="27dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@+id/textPhone"
        android:gravity="bottom"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textPhone"
        app:layout_constraintTop_toBottomOf="@+id/etName" />


    <EditText
        android:id="@+id/etName"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginBottom="11dp"
        android:layout_marginEnd="69dp"
        android:layout_marginLeft="38dp"
        android:layout_marginRight="69dp"
        android:layout_marginStart="38dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@+id/textName"
        android:gravity="bottom"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/etPhone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textName"
        app:layout_constraintTop_toBottomOf="@+id/etEmail" />

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_below="@+id/textPhone"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="154dp"
        android:layout_marginEnd="148dp"
        android:layout_marginLeft="148dp"
        android:layout_marginRight="148dp"
        android:layout_marginStart="148dp"
        android:text="Register"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="62dp"
        android:layout_height="19dp"
        android:layout_marginEnd="306dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="306dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textPhone" />

    <EditText
        android:id="@+id/password"
        android:layout_width="179dp"
        android:layout_height="46dp"
        android:layout_marginBottom="55dp"
        android:layout_marginEnd="68dp"
        android:layout_marginLeft="137dp"
        android:layout_marginRight="68dp"
        android:layout_marginStart="137dp"
        android:layout_marginTop="84dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/btnSubmit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etPhone" />

</android.support.constraint.ConstraintLayout>